# Example environment variables - DO NOT COMMIT TO GIT
# Copy this file to .env and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/rjgems
# For production with MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/rjgems

# JWT Secret (use a secure random string in production)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS
CLIENT_URL=http://localhost:5173
# For production:
# CLIENT_URL=https://your-vercel-app.vercel.app

# AI Integration (Optional but recommended for full functionality)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Additional Configuration
SESSION_SECRET=your-session-secret-key
